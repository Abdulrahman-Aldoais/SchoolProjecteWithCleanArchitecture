@model IEnumerable<School.Application.Features.Students.Dtos.GetList.GetStudentListOutput>
@{
    ViewData["Title"] = "قائمة الطلاب";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <title>بيانات الطالب</title>
    <style>
        table {
            width: 100vw;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            text-align: right;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
            font-size: 18px;
            font-weight: bold;
        }

        td {
            font-size: 16px;
        }
    </style>
</head>
<body>
    <h1> <a asp-controller="Student" asp-action="AddStudent">إضافة طالب</a></h1>
    <br />
    <br />
    <h1>بيانات الطالب</h1>
    <table>
        <tr>
            <th>الرقم</th>
            <th>الاسم</th>
            <th>العمر</th>
            <th>الصف</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td> @item.DepartmentName</td>
            </tr>
        }

    </table>
</body>
</html>
